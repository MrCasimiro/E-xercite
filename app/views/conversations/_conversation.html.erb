<li>
  <div class="container">
  <div class="row">
    <div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
      <div class="panel panel-default" data-conversation-id="<%= conversation.id %>">
        <div class="panel-heading">
          <%= link_to conversation.opposed_user(person).email, '', class: 'toggle-window' %>
          <%= link_to "x", close_person_conversation_path(id: conversation.id), class: "btn btn-default btn-xs pull-right", remote: true, method: :post %>
        </div>

        <div class="panel-body" style="display: none;">
          <div class="messages-list">
            <ul>
              <%= render 'conversations/conversation_content', messages: conversation.messages, person: person %>
            </ul>
          </div>
          <%= form_for conversation.messages.new, url: person_conversation_user_messages_path(person_id: current_person.id, conversation_id: conversation.id), remote: true do |f| %>
            <%= f.hidden_field :person_id, value: person.id %>
            <%= f.text_area :body, class: "form-control" %>
            <%= f.submit "Send", class: "btn btn-success" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</li>
