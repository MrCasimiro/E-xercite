
<link href="/css/landing-page.css" rel="stylesheet">

<% flash.each do |message_type, message| %>
<div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% provide(:title, 'Log in') %>
    <h1><br><br>Log in<br></h1>

        <%= form_for(:session, url: login_path) do |f|%>
        <%= f.label :email, "E-mail" %>
    <br>
        <%= f.email_field :email, class: 'form-control', id: 'email_field' %>
    </br>
        <%= f.label :password %>
    <br>
        <%= f.password_field :password, class: 'form-control', id: 'pass_field' %>
    </br>
        <%= f.submit "Log in", class: "btn btn-primary", id: 'submit_btn' %>
        <% end %>
    <br>	
        <p>Novo usu√°rio? <%= link_to "Cadastre-se agora!", signup_path %></p>
    </br>

    </div>
</div>




